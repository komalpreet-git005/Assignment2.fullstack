<!DOCTYPE html>
<html>
<body>
<h3>Array Operations</h3>
<script>
let arr = [12, 5, 9, 22, 1];
let largest = Math.max(...arr);
let smallest = Math.min(...arr);
document.write("Array: " + arr + "<br>");
document.write("Largest: " + largest + "<br>");
document.write("Smallest: " + smallest + "<br>");
document.write("Ascending: " + arr.slice().sort((a,b)=>a-b) + "<br>");
document.write("Descending: " + arr.slice().sort((a,b)=>b-a));
</script>
</body>
</html>
//soln 3
<!DOCTYPE html>
<html>
<body>
<h3>Form Validation</h3>
<form onsubmit="return validateForm()">
  Name: <input id="name"><br>
  Email: <input id="email"><br>
  Age: <input id="age" type="number"><br>
  <button type="submit">Submit</button>
</form>

<script>
function validateForm() {
  let n = document.getElementById("name").value.trim();
  let e = document.getElementById("email").value.trim();
  let a = parseInt(document.getElementById("age").value);
  let pattern = /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/;
  if (!n) { alert("Name cannot be empty"); return false; }
  if (!pattern.test(e)) { alert("Invalid email"); return false; }
  if (isNaN(a) || a < 18 || a > 100) { alert("Age must be between 18 and 100"); return false; }
  alert("Form submitted successfully!");
  return false;
}
</script>
</body>
</html>
